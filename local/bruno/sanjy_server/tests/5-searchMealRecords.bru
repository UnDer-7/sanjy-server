meta {
  name: 5-searchMealRecords
  type: http
  seq: 5
}

post {
  url: {{SERVER_URL}}/v1/meal-record
  body: none
  auth: inherit
}

script:pre-request {
  const today = new Date();
  const startOfDay = new Date(today.getFullYear(), today.getMonth(), today.getDate());
  const endOfDay = new Date(today.getFullYear(), today.getMonth(), today.getDate(), 23, 59, 59);

  bru.setVar("consumedAtAfter", startOfDay.toISOString());
  bru.setVar("consumedAtBefore", endOfDay.toISOString());
}

get {
  url: {{SERVER_URL}}/v1/meal-record?pageNumber=0&pageSize=10&consumedAtAfter={{consumedAtAfter}}&consumedAtBefore={{consumedAtBefore}}
  body: json
  auth: inherit
}

params:query {
  pageNumber: 0
  pageSize: 10
  consumedAtAfter: {{consumedAtAfter}}
  consumedAtBefore: {{consumedAtBefore}}
}

headers {
  Content-Type: application/json
}

tests {
  test("should return status 200", function() {
    expect(res.getStatus()).to.equal(200);
  });

  test("should return paginated response", function() {
    const body = res.getBody();
    expect(body).to.have.property("content");
    expect(body).to.have.property("currentPage");
    expect(body).to.have.property("pageSize");
    expect(body).to.have.property("totalItems");
    expect(body).to.have.property("totalPages");
  });

  test("should have valid page structure", function() {
    const body = res.getBody();
    expect(body.currentPage).to.be.a("number");
    expect(body.pageSize).to.be.a("number");
    expect(body.totalItems).to.be.a("number");
    expect(body.totalPages).to.be.a("number");
  });

  test("content should be an array", function() {
    const body = res.getBody();
    expect(body.content).to.be.an("array");
  });

  test("should contain the meal record created in previous test", function() {
    const body = res.getBody();
    const expectedMealRecordId = bru.getVar("mealRecordId");
    const foundMealRecord = body.content.find(mr => mr.id === expectedMealRecordId);

    expect(foundMealRecord).to.not.be.undefined;
  });

  test("meal records should have valid structure", function() {
    const body = res.getBody();
    if (body.content.length > 0) {
      const mealRecord = body.content[0];
      expect(mealRecord).to.have.property("id");
      expect(mealRecord).to.have.property("mealType");
      expect(mealRecord.mealType).to.have.property("id");
      expect(mealRecord).to.have.property("consumedAt");
      expect(mealRecord).to.have.property("isFreeMeal");
    }
  });
}

settings {
  encodeUrl: false
  timeout: 0
}
